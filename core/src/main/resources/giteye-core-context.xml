<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                               http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">


    <bean id="databasePath" class="java.lang.String">
        <constructor-arg value="${graph.db.path}"/>
    </bean>

    <bean id="graphDbManager" class="org.phoenix.giteye.core.neo4j.manager.impl.GraphDatabaseManagerImpl">
        <property name="graphTemplate" ref="graphTemplate"/>
        <property name="databasePath" ref="databasePath"/>
    </bean>
    
    <bean id="graphTemplate" class="org.phoenix.giteye.core.neo4j.manager.GraphTemplate"/>
</beans>
